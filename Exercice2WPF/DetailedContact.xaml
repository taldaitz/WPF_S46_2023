<Window x:Class="Exercice2WPF.DetailedContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercice2WPF"
        mc:Ignorable="d"
        Title="DetailedContact" Height="450" Width="800">
    <StackPanel>

        <Label>Nom :</Label>
        <TextBlock Text="{Binding Lastname}"></TextBlock>
        <Label>Prénom :</Label>
        <TextBlock Text="{Binding Firstname}"></TextBlock>
        <Label>Téléphone :</Label>
        <TextBlock Text="{Binding PhoneNumber}"></TextBlock>
        <Label>Date de naissance :</Label>
        <TextBlock Text="{Binding DateOfBirth}"></TextBlock>
        
        
    </StackPanel>
</Window>
