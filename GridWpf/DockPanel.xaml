<Window x:Class="GridWpf.DockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GridWpf"
        mc:Ignorable="d"
        Title="DockPanel" Height="450" Width="800">

    <DockPanel>

        <Grid DockPanel.Dock="Top" Panel.ZIndex="1">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">TOP</TextBlock>
        </Grid>
        <Grid DockPanel.Dock="Left" Panel.ZIndex="2">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">LEFT</TextBlock>
        </Grid>
        <Grid DockPanel.Dock="Bottom">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">BOTTOM</TextBlock>
        </Grid>

        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">FILLER</TextBlock>

    </DockPanel>
</Window>
